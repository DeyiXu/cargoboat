<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>登录-{{getWebInfo "name"}}</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <!-- Bootstrap 3.3.7 -->
    <link rel="stylesheet" href="/assets/components/bootstrap/css/bootstrap.min.css">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="/assets/components/font-awesome/css/font-awesome.min.css">
    <!-- Ionicons -->
    <link rel="stylesheet" href="/assets/components/Ionicons/css/ionicons.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="/assets/dist/css/AdminLTE.min.css">
    <!-- iCheck -->
    <link rel="stylesheet" href="/assets/components/iCheck/square/blue.css">
    <link rel="stylesheet" href="/assets/components/toastr/toastr.min.css">
    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
  <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
  <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
  <![endif]-->

    <!-- Google Font -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600,700,300italic,400italic,600italic">
</head>

<body class="hold-transition login-page">
    <div class="login-box">
        <div class="login-logo">
            <a href="/"><b>Cargo</b>boat</a>
        </div>
        <!-- /.login-logo -->
        <div class="login-box-body">
            <p class="login-box-msg">登录开始您的会话</p>
            <form id="form">
                <div class="form-group has-feedback">
                    <input type="hidden" name="redirect_url" id="redirect_url" value="{{.redirect_url}}">
                    <input type="text" class="form-control" name="username" placeholder="账号">
                    <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
                </div>
                <div class="form-group has-feedback">
                    <input type="password" class="form-control" name="pass" placeholder="密码">
                    <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                </div>
                <div class="row">
                    <div class="col-xs-8">
                        <div class="checkbox icheck">
                            <label>
                                <input type="checkbox" name="me" /> 记住我
                            </label>
                        </div>
                    </div>
                    <!-- /.col -->
                    <div class="col-xs-4">
                        <button type="submit" class="btn btn-primary btn-block btn-flat">登录</button>
                    </div>
                    <!-- /.col -->
                </div>
            </form>
            <!-- /.social-auth-links -->
        </div>
        <!-- /.login-box-body -->
    </div>
    <!-- /.login-box -->

    <!-- jQuery 3 -->
    <script src="/assets/components/jquery/jquery.min.js"></script>
    <!-- Bootstrap 3.3.7 -->
    <script src="/assets/components/bootstrap/js/bootstrap.min.js"></script>
    <!-- iCheck -->
    <script src="/assets/components/iCheck/icheck.min.js"></script>
    <script src="/assets/components/toastr/toastr.min.js"></script>
    <script>
        $(function () {
            $('input').iCheck({
                checkboxClass: 'icheckbox_square-blue',
                radioClass: 'iradio_square-blue',
                increaseArea: '20%' /* optional */
            });
            
            var $RedirectURL = $("#redirect_url");
            var $Form = $("#form");

            $Form.submit(function (e) {
                e.preventDefault();
                $.ajax({
                    type: "post",
                    url: "/api/login",
                    data: $('#form').serialize(),
                    success: function () {
                        var redirectURL = $RedirectURL.val();
                        if (redirectURL == "") {
                            redirectURL = "/index.html";
                        }
                        window.location.href = redirectURL;
                    },
                    error: function (e) {
                        switch (e.status) {
                            case 400:
                                toastr.error(e.responseJSON.error);
                                break;
                            case 500:
                                toastr.error("服务器出现异常！");
                                break;
                            default:
                                toastr.error("登录出错！");
                                break;
                        }
                    }
                });
            });
        });
    </script>
</body>

</html>