{{ define "header"}}
<title>{{.title}}-{{getWebInfo "name"}}</title>
{{ end }}
{{define "content"}}
<!-- Content Header (Page header) -->
<section class="content-header">

</section>

<!-- Main content -->
<section class="content container-fluid">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">

                </div>
                <div class="box-body">
                    <table id="applicationTable" class="table table-bordered table-hover">
                        <thead>
                        <tr>
                            <th>应用ID</th>
                            <th>应用名称</th>
                            <th>创建时间</th>
                            <th>模式数量</th>
                            <th>应用版本</th>
                            <th>操作</th>
                        </tr>
                        </thead>
                        <tbody>

                        </tbody>
                    </table>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
        <!-- /.col -->
    </div>
</section>
<!-- /.content -->
<!-- 编辑应用程序 -->
<div class="modal fade" data-backdrop="static" id="modal-appupdate">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">编辑应用程序</h4>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label for="modal-appupdate-name">应用程序名称</label>
                    <input id="modal-appupdate-id" name="id" type="hidden" />
                    <input class="form-control" id="modal-appupdate-name" name="name" />
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default pull-left" data-dismiss="modal">取消</button>
                <button type="button" class="btn btn-primary">保存</button>
            </div>
        </div>
    </div>
</div>
<!-- /编辑应用程序 -->
{{end}}