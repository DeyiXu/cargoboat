{{ define "scripts"}}
<script type="text/javascript">
    window.PageComplete = function () {
        console.info("PageComplete index....");
        var $ModalAppupdate = $('#modal-appupdate');
        $('#applicationTable')
            .on( 'init.dt', function () {
                $('.appupdate').on('click',function () {
                    var appID = $(this).attr('data-app-id');
                    $.getJSON('/api/application/one',{id:appID},function (data) {
                        $ModalAppupdate.find('[name="id"]').val(data.id);
                        $ModalAppupdate.find('[name="name"]').val(data.name);
                        $ModalAppupdate.modal('show');
                    });
                });
            } )
            .DataTable({
            'serverSide': true,
            'paging': true,
            'lengthChange': false,
            'searching': false,
            'ordering': true,
            'info': true,
            'autoWidth': false,
            'ajax': "/api/application/list",
            "columns": [
                { "data": "id" },
                { "data": "name" },
                { "data": "created_at" },
                { "data": "mode_count" },
                { "data": "version" },
            ],
            "columnDefs": [
                {
                    "aTargets": [5],
                    "mRender": function (data, type, full) {
                        console.log(data, type, full);
                        return `<a href="javascript:void(0)" class="appupdate" data-app-id="${full.id}"><i class="fa fa-edit"></i></a>
<a href="/application/mode/list?app_id=${full.id}" data-app-id="${full.id}"><i class="fa fa-bolt"></i></a>
<a href="javascript:void(0)" data-app-id="${full.id}"><i class="fa fa-tags"></i></a>
<a href="javascript:void(0)" data-app-id="${full.id}"><i class="fa fa-trash-o"> </i></a>`
                    }
                },
            ],
            // "createdRow": function (row, data, dataIndex) {
            //     // if (data[4] == "A") {
            //     //     $(row).addClass('important');
            //     // }
            //     console.log("行被创建了：", row, data, dataIndex);
            // },
            "initComplete": function (settings, json) {
                // $('div.loading').remove();
                console.log('初始化结束');

            }
        });
    }
</script>
{{ end }}