{{ define "header"}}
<title>{{.title}}-{{getWebInfo "name"}}</title>
{{ end }}
{{define "content"}}
<!-- Content Header (Page header) -->
<section class="content-header">

</section>

<!-- Main content -->
<section class="content container-fluid">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h1>{{.app.Name}}</h1>
                </div>
                <div class="box-body">
                    <table id="applicationModelTable" class="table table-bordered table-hover">
                        <thead>
                        <tr>
                            <th>模式ID</th>
                            <th>模式名称</th>
                            <th>创建时间</th>
                            <th>操作</th>
                        </tr>
                        </thead>
                        <tbody>
                        {{range .modes}}
                            <tr>
                                <td>{{.ID}}</td>
                                <td>{{.Name}}</td>
                                <td>{{.CreatedAt}}</td>
                                <td>编辑</td>
                            </tr>
                        {{end}}
                        </tbody>
                    </table>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
        <!-- /.col -->
    </div>
</section>
<!-- /.content -->
<!-- 添加模型 -->
<div class="modal fade" data-backdrop="static" id="modal-addmode">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">添加添加应用程序模式</h4>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label for="mode-name">模式名称</label>
                    <input class="form-control" id="mode-name" name="mode_name" />
                </div>
                <div class="form-group">
                    <label for="msg_type">应用程序</label>
                    <select class="form-control" id="msg_type" name="msg_type">
                        <option value="event">事件</option>
                    </select>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default pull-left" data-dismiss="modal">取消</button>
                <button type="button" class="btn btn-primary">保存</button>
            </div>
        </div>
    </div>
</div>
<!-- /添加模型 -->
{{end}}